<div class="post-content">
    <div class="ui grid">
      <div class="four wide column">
        <a class="avatar avatar-link"
           href="/posts?author=<%= post.author %>"
           data-content="<%= post.author.bio %>">
        </a>
      </div>
  
      <div class="eight wide column">
        <div class="ui segment">
          <h3><a href="/posts/<%= post.id %>"><%= post.title %></a></h3>
          <pre><%- post.content %></pre>
          <div>
            <span class="tag"></span>
            <span class="tag right">
              <span><%- dateFormat(post.updatedAt) %></span>
              <span>浏览(<%= post.pv || 0 %>)</span>
              <span>留言(<%= post.commentsCount || 0 %>)</span>
  
              <% if (post.user.id  === post.author) { %>
                <div class="ui inline dropdown">
                  <div class="text"></div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <div class="item"><a href="/posts/<%= post.id %>/edit">编辑</a></div>
                    <div class="item"><a href="/posts/<%= post.id %>/remove">删除</a></div>
                  </div>
                </div>
              <% } %>
  
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>